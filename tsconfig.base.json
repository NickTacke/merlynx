{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@merlynx/source"],
    "baseUrl": ".",
    "paths": {
      "@merlynx/shared-types": ["libs/shared/types/src/index.ts"],
      "@merlynx/database": ["libs/database/src/index.ts"],
      "@merlynx/lightspeed-client": ["libs/lightspeed-client/src/index.ts"]
    }
  }
}
